{
    "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
    "manifestVersion": "1.16",
    "version": "1.1.0",
    "id": "${{TEAMS_APP_ID}}",
    "packageName": "com.ucl.holorepository.teams",
    "developer": {
        "name": "HoloRepository 2023",
        "websiteUrl": "${{TAB_ENDPOINT}}",
        "privacyUrl": "${{TAB_ENDPOINT}}/index.html#/privacy",
        "termsOfUseUrl": "${{TAB_ENDPOINT}}/index.html#/termsofuse"
    },
    "icons": {
        "color": "color.png",
        "outline": "outline.png"
    },
    "name": {
        "short": "HoloCollab",
        "full": "HoloRepository Collab"
    },
    "description": {
        "short": "Collaborative HoloRepository Environment.",
        "full": "Shared collaborative environment for HoloRepository technology stack."
    },
    "accentColor": "#4C55B6",
    "bots": [],
    "composeExtensions": [],
    "configurableTabs": [
        {
            "configurationUrl": "${{TAB_ENDPOINT}}/#/config",
            "canUpdateConfiguration": true,
            "scopes": [
                "groupchat",
                "team"
            ],
            "context": [
                "channelTab",
                "privateChatTab",
                "meetingChatTab",
                "meetingDetailsTab",
                "meetingStage",
                "meetingSidePanel"
            ]
        }
    ],
    "supportedChannelTypes": [
        "sharedChannels",
        "privateChannels"
    ],
    "permissions": [
        "identity",
        "messageTeamMembers"
    ],
    "validDomains": [
        "${{TAB_DOMAIN}}",
        "*.azurewebsites.net",
        "worldtimeapi.org",
        "*.blob.core.windows.net"
    ],
    "webApplicationInfo": {
        "id": "${{AAD_APP_CLIENT_ID}}",
        "resource": "api://${{TAB_DOMAIN}}/${{AAD_APP_CLIENT_ID}}"
    },
    "showLoadingIndicator": false,
    "authorization": {
        "permissions": {
            "resourceSpecific": [
                {
                    "name": "LiveShareSession.ReadWrite.Chat",
                    "type": "Delegated"
                }, {
                    "name": "LiveShareSession.ReadWrite.Group",
                    "type": "Delegated"
                }, {
                    "name": "MeetingStage.Write.Chat",
                    "type": "Delegated"
                }, {
                    "name": "ChannelMeetingStage.Write.Group",
                    "type": "Delegated"
                }
            ]
        }
    }
}
